{% render 'hero' with  {
    settings: section.settings,
    id: section.id
} %}

{% schema %}
    {
    "name":"Hero",
    "settings":[
        {
            "type":"text",
            "id":"heading",
            "label":"Heading",
            "default":"New Heading"
        },
        {
            "type":"textarea",
            "id":"copy",
            "label":"Body Copy",
            "default":"Add paragraph here"
        },
        {
            "type":"url",
            "id":"link_url",
            "label":"Link URL"
        },
        {
            "type":"text",
            "id":"link_text",
            "label":"Link Text",
            "default":"Shop Now"
        },
        {
            "type":"image_picker",
            "id":"small_image",
            "label":"Small Image",
            "info":"Dimensions: 991x991"
        },
        {
            "type":"image_picker",
            "id":"large_image",
            "label":"Large Image"
        },
        {
            "type":"select",
            "id":"allignment",
            "label":"Allignment",
            "default":"left",
            "options":[
                {
                "label":"Left",
                "value":"left"
                },
                {
                "label":"Center",
                "value":"center"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Hero",
            "category":"Image w/ text"
        }
    ]
    }

{% endschema %} 